#!/bin/bash
set -e
source scripts/setup.sh

# export WORLD_ADDRESS=0x55fefc4a4e5c94def16d25bd1afa87407d114600560f75100f3edc8d5eaced6

echo "@WORLD: $WORLD_ADDRESS"

if [[
  "$WORLD_ADDRESS" != "0x"*
]]; then
  echo "! Missing data ðŸ‘Ž"
  exit 1
fi

#
# torii over https instructions
# https://web.dev/articles/how-to-use-local-https
#
# Install...
# $ brew install mkcert
# $ mkcert -install
# 
# Create certificate
# $ mkcert 0.0.0.0

torii --version
torii \
  --world $WORLD_ADDRESS $* \
  --allowed-origins "*" \
  # --rpc https://api.cartridge.gg/x/pistols-staging/katana \
  # --relay-local-key-path ./0.0.0.0-key.pem \
  # --relay-cert-path ./0.0.0.0.pem \
