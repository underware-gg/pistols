{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    // "assumeChangesOnlyAffectDirectDependencies": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "allowJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false, // allows return null|undefined for any type
    // "listEmittedFiles": true,
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "outDir": "dist",
    "rootDir": "src",
    // allow absolute paths: import {} from 'src/*'
    "baseUrl": "./",
    "paths": {
      "src/*": [
        "./src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/test/*.ts",
    "node_modules",
    "dist"
  ]
}