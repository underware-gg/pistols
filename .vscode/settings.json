{
  "files.exclude": {
    "**/node_modules": true,
    "**/build": true,
    "**/target": true,
    "**/.github": true,
    "**/.next": true,
    "**/_bak": true,
    "**/*.tsbuildinfo": true,
    "**/next-env.d.ts": true,
    "lords_mock": true,
  },
  "search.exclude": {
    "**/*-lock.json": true,
    "**/*-lock.yaml": true,
    "**/*.lock": true,
    "**/artifacts/**/*.json": true,
    "**/contracts/**/*.json": true,
    "**/yarn*.json": true,
    "**/dist": true,
    "**/.gitignore": true,
    "**/.gitmodules": true,
    "**/database.json": true,
    // "**/generated/*": true,
    "**/manifest.json": true,
    "client/public/**": true,
    "dojo/abis/**": true,
    "dojo/manifests/**": true,
    "dojo/bindings/**": true,
    "gamejam": true,
  },
  "typescript.validate.enable": true,
  "editor.detectIndentation": false,
  "editor.formatOnPaste": true,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "[css][scss]": {
    "editor.formatOnPaste": false
  },
  "[cairo]": {
    "editor.tabSize": 4,
  },
  // "cairo1.languageServerPath": "${userHome}/.dojo/bin/dojo-language-server",
  "cairo1.enableLanguageServer": true,
  "cairo1.enableScarb": true
}